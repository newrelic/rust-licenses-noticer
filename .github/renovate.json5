{
  extends: [
    'config:recommended',
  ],
  labels: [
    'dependencies',
  ],
  enabledManagers: [
    'cargo',
  ],
  rangeStrategy: 'auto',
  prConcurrentLimit: 0,
  printConfig: true,
  prHourlyLimit: 0,
  lockFileMaintenance: { enabled: true }, // Update transitive dependencies by keeping lockfile updated
  packageRules: [
    {
      matchManagers: [
        'cargo',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      groupName: 'minor and patch updates',
    },
  ],
}
